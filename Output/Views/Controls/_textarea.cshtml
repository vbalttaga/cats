@using Weblib.Models.Common
<textarea 
    name="@(((TextboxModel)Model).Name)" 
    class="@(!string.IsNullOrEmpty(((TextboxModel)Model).Class)?((TextboxModel)Model).Class:"textarea")" 
    placeholder="@(((TextboxModel)Model).PlaceHolder)"
    @if (((TextboxModel)Model).ValidationType != LIB.AdvancedProperties.ValidationTypes.None)
    {
    @:data-req="@((int)((TextboxModel)Model).ValidationType)"
    }    
    >@(!string.IsNullOrEmpty(((TextboxModel)Model).Value)? ((TextboxModel)Model).Value.Trim() :"" )</textarea> 